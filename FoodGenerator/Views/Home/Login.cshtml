@{
    ViewData["Title"] = "Login";
}
    <section class="d-block">
        <form method="post" action="index.html">
            <!--This Creates a text box with the title of "Login-Field"-->
            <div class="Login-Field">


                <h1 style="text-align:center">Login</h1>

                <div style="text-align:center">
                    <input type="email" name="email" value="email"
                           onFocus="field_focus(this, 'email');" onblur="field_blur(this, 'email');"
                           class="email" />

                    <input type="password" name="email"
                           value="email" onFocus="field_focus(this, 'email');"
                           onblur="field_blur(this, 'email');" class="email" />
                </div>

                <div style="text-align:center">
                    <a href="#"><div class="btn btn-primary">Sign In</div></a><!--This is the sign in button, of type btn-->

                    <a href="#"><div class="btn btn-danger">Sign up</div></a><!--This is the sign up button, of type btn2-->
                </div>


            </div>
            
        </form>
    </section>